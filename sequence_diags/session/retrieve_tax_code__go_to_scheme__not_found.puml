group Retrieve tax code
	SessionSrv -> Wallet : GET /cards///<pan token>///taxCode
		rnote left
			__header__
			- Version: //<api version>//
		end note
		
	opt PagoBancomat card
		Wallet -> Wallet : Search the local DB
			rnote left
				Search unsuccessful
			end note
	end
		
	group Token to PAN
		Wallet -> PANTokenizer : GET /pans///<pan token>//
			rnote left
				__header__
				- Version: //<api version>//
			end note
		
		PANTokenizer --> Wallet : HTTP 200 (ok)
			rnote left
				__response body__
				{
					"pan": "//<pan>//"
				}
			end note
	end
		
	group Go to Bancomat or Nexi or SIA or Poste Italiane or Intesa Sanpaolo or ICCREA
		Wallet -> Wallet : Search target by BIN
	
		Wallet -> ServiceCenter : POST /taxcodes
			rnote left
				__request body__
				{
					"pan": "//<pan>//"
				}
			end note
		alt Card not found
		    ServiceCenter --> Wallet : HTTP 404 (not found)
		else Card not valid
		    ServiceCenter --> Wallet : HTTP 200 (ok)
        		rnote left
        			__response body__
        			{
        				"taxCode": "//<tax code>//",
        				"status": "V"
        			}
        		end note
        end
	end
		
	Wallet --> SessionSrv : HTTP 404 (not found)
end