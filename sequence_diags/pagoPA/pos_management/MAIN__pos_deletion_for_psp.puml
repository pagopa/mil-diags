@startuml
!include_many skin.puml
!include_many actors.puml

activate operator

operator -> management ++ : update POS

management -> mil_registry ++ : DELETE /poses///<terminal uuid>//
	note left
		__header__
		RequestId: //<request id>//
		Authorization: Bearer //<access token>//
	end note

note over mil_registry #LightGreen
	__//<access token>//__
	base64url(//<token header>//) + "." +
	base64url(//<access token payload>//) + "." +
	//<base64url of access token signature>//
	__//<access token payload>//__
	{
		"sub": "//<client id>//",
		"aud": "mil.pagopa.it",
		"iss": "https:////<host name>///mil-auth",
		"iat": //<issue unix epoch>//,
		"exp": //<expiration unix epoch>//,
		"groups": [
			.
			.
			.
			"pos_register",
			.
			.
			.
		]
	}
end note

!include_many get_terminal_data_by_id.puml

mil_registry -> mil_registry : verify //<client id>// = //<client id of the subject who registered the POS>//

note over mil_registry #Orange
	On client id mismatch, return 403 (forbidden) with specific error body.
end note

!include_many delete_terminal_for_psp.puml

mil_registry --> management -- : HTTP 204 (no content)

management --> operator -- : ok

deactivate operator
@enduml